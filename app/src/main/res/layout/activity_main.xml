<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="ID : "
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/show_id"
            android:text=""
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="ยอดเงินคงเหลือ : "
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/show_money"
            android:text=""
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_marginTop="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <EditText
        android:id="@+id/txt_money"
        android:imeOptions="actionDone"
        android:text=""
        android:cursorVisible="false"
        android:inputType="numberSigned"
        android:gravity="right"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/btn_addmoney"
            android:text="เติมเงิน"
            android:textSize="20sp"
            android:layout_width="113dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_deletemoney"
            android:text="ชำระเงิน"
            android:textSize="20sp"
            android:layout_width="113dp"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_cleardata"
            android:text="ลบข้อมูล"
            android:textSize="20sp"
            android:layout_width="113dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ScrollView
            android:id="@+id/sv_messages"
            android:layout_width="match_parent"
            android:layout_height="100sp">
            <TextView
                android:id="@+id/tv_messages"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                tools:text="NFC Messages" />
        </ScrollView>
    </LinearLayout>
</LinearLayout>